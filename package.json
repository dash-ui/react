{
  "name": "@dash-ui/react",
  "version": "0.7.0",
  "homepage": "https://github.com/dash-ui/react#readme",
  "repository": "github:dash-ui/react",
  "bugs": "https://github.com/dash-ui/react/issues",
  "author": "Jared Lunde <jared.lunde@gmail.com> (https://jaredLunde.com)",
  "license": "MIT",
  "description": "React components and hooks for dash-ui",
  "keywords": [
    "react",
    "react hook",
    "react component",
    "css-in-js",
    "css-in-react",
    "dash-ui",
    "dash",
    "react css library",
    "react styles",
    "react themes",
    "react ssr",
    "react css variables"
  ],
  "main": "dist/main/index.js",
  "module": "dist/module/index.js",
  "unpkg": "dist/umd/dash-react.js",
  "source": "src/index.tsx",
  "types": "types/index.d.ts",
  "files": [
    "/dist",
    "/src",
    "/types",
    "/server"
  ],
  "exports": {
    ".": {
      "browser": "./dist/module/index.js",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/main/index.js",
      "umd": "./dist/umd/dash-react.js",
      "source": "./src/index.tsx",
      "types": "./types/index.d.ts",
      "default": "./dist/main/index.js"
    },
    "./server": {
      "browser": "./server/dist/module/index.js",
      "import": "./server/dist/esm/index.mjs",
      "require": "./server/dist/main/index.js",
      "source": "./server/src/index.tsx",
      "types": "./server/types/index.d.ts",
      "default": "./server/dist/main/index.js"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "sideEffects": false,
  "scripts": {
    "build": "lundle build",
    "check-types": "lundle check-types",
    "dev": "lundle build -f module,cjs -w",
    "format": "prettier --write \"{,!(node_modules|dist|coverage)/**/}*.{ts,tsx,js,jsx,md,yml,json}\"",
    "lint": "eslint . --ext .ts,.tsx",
    "prerelease": "npm run validate && npm run build",
    "release": "git add . && standard-version -a",
    "test": "jest",
    "validate": "lundle check-types && npm run lint && jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lundle check-types && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint",
      "prettier --write"
    ],
    "**/*.{md,yml,json}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "lunde"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "peerDependencies": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "test",
    "*.config.js",
    "*.d.ts"
  ],
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src",
      "server/src",
      "test"
    ],
    "testMatch": [
      "<rootDir>/{server/src,src}/**/?(*.)test.{tsx,ts}"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ],
    "snapshotResolver": "./test/resolve-snapshot.js",
    "globals": {
      "__DEV__": true
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSpacing": false
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@dash-ui/styles": "^0.7.1",
    "@testing-library/jest-dom": "latest",
    "@testing-library/react": "latest",
    "@testing-library/react-hooks": "latest",
    "@testing-library/user-event": "latest",
    "@types/jest": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "babel-jest": "latest",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "latest",
    "eslint-config-lunde": "latest",
    "husky": "latest",
    "jest": "latest",
    "lint-staged": "latest",
    "lundle": "^0.4.9",
    "prettier": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-test-renderer": "latest",
    "standard-version": "^8.0.2",
    "typescript": "latest"
  },
  "dependencies": {
    "@react-hook/passive-layout-effect": "^1.2.0"
  },
  "peerDependencies": {
    "@dash-ui/styles": ">=0.6.1",
    "react": ">=16.8",
    "react-dom": ">=16.8"
  }
}
