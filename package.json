{
  "name": "@-ui/react",
  "version": "1.0.30",
  "homepage": "https://github.com/dash-ui/react#readme",
  "repository": "github:dash-ui/react",
  "bugs": "https://github.com/dash-ui/react/issues",
  "license": "MIT",
  "author": "Jared Lunde <jared.lunde@gmail.com> (https://jaredLunde.com)",
  "description": "React components and hooks for -ui",
  "keywords": [
    "react",
    "react hook",
    "react component",
    "css-in-js",
    "css-in-react",
    "dash-ui"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "umd:main": "dist/umd/-ui-react.min.js",
  "unpkg": "dist/umd/-ui-react.min.js",
  "files": [
    "/dist",
    "/server"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:cjs && npm run build:es && npm run build:server && npm run build:umd && npm run build:types",
    "build:cjs": "babel src -d dist/cjs -x .ts,.tsx --ignore \"**/*.test.ts\",\"**/*.test.tsx\",\"**/*.d.ts\" --delete-dir-on-start",
    "build:es": "cross-env BABEL_ENV=es babel src -d dist/es -x .ts,.tsx --ignore \"**/*.test.ts\",\"**/*.test.tsx\",\"**/*.d.ts\" --delete-dir-on-start",
    "build:server": "babel server-src -d server -x .ts,.tsx --ignore \"**/*.test.tsx\",\"**/*.test.tsx\" --delete-dir-on-start",
    "build:umd": "rollup -c",
    "build:types": "tsc -p tsconfig.json -d --outDir dist/es --emitDeclarationOnly && mkdir -p dist/cjs && cp -R dist/es/**.d.ts dist/cjs && tsc -p tsconfig.server.json -d --outDir server --emitDeclarationOnly && rimraf {dist,server}/**/*.test.d.ts",
    "check-types": "tsc --noEmit -p tsconfig.json",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,yml,json,babelrc,eslintrc,prettierrc}\"",
    "lint": "eslint . --ext .ts,.tsx",
    "prepublishOnly": "npm run lint && npm run test && npm run build && npm run format",
    "test": "jest",
    "validate": "npm run check-types && npm run build:cjs && npm run lint && npm run test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build:types"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint",
      "prettier --write"
    ],
    "**/*.{md,yml,json,babelrc,eslintrc,prettierrc}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "latest",
    "@lunde/babel-preset-es": "latest",
    "@rollup/plugin-replace": "^2.2.1",
    "@testing-library/jest-dom": "latest",
    "@testing-library/react": "latest",
    "@testing-library/react-hooks": "latest",
    "@types/jest": "latest",
    "@types/jsdom": "^12.2.4",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "cross-env": "latest",
    "eslint": "latest",
    "eslint-import-resolver-jest": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "husky": "latest",
    "jest": "latest",
    "lint-staged": "latest",
    "prettier": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-test-renderer": "latest",
    "rimraf": "^2.6.3",
    "rollup": "^1.27.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "ts-jest": "latest",
    "typescript": "latest"
  },
  "dependencies": {
    "@-ui/styles": "^1.0.48"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  }
}
