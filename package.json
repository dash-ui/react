{
  "name": "@dash-ui/react",
  "version": "0.9.1",
  "description": "React components and hooks for dash-ui",
  "keywords": [
    "react",
    "react hook",
    "react component",
    "css-in-js",
    "css-in-react",
    "dash-ui",
    "dash",
    "react css library",
    "react styles",
    "react themes",
    "react ssr",
    "react css variables"
  ],
  "homepage": "https://github.com/dash-ui/react#readme",
  "bugs": "https://github.com/dash-ui/react/issues",
  "repository": "github:dash-ui/react",
  "license": "MIT",
  "author": "Jared Lunde <jared.lunde@gmail.com> (https://jaredLunde.com)",
  "sideEffects": false,
  "exports": {
    ".": {
      "browser": "./dist/module/index.js",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/main/index.js",
      "umd": "./dist/umd/dash-react.js",
      "source": "./src/index.tsx",
      "types": "./types/index.d.ts",
      "default": "./dist/main/index.js"
    },
    "./server": {
      "browser": "./server/dist/module/index.js",
      "import": "./server/dist/esm/index.mjs",
      "require": "./server/dist/main/index.js",
      "source": "./server/src/index.tsx",
      "types": "./server/types/index.d.ts",
      "default": "./server/dist/main/index.js"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "main": "dist/main/index.js",
  "unpkg": "dist/umd/dash-react.js",
  "module": "dist/module/index.js",
  "source": "src/index.tsx",
  "types": "types/index.d.ts",
  "files": [
    "/dist",
    "/src",
    "/types",
    "/server"
  ],
  "scripts": {
    "build": "lundle build",
    "check-types": "lundle check-types",
    "dev": "lundle build -f module,cjs -w",
    "format": "prettier --write \"{,!(node_modules|dist|coverage)/**/}*.{ts,tsx,js,jsx,md,yml,json}\"",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install",
    "test": "jest",
    "validate": "lundle check-types && npm run lint && jest --coverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --ext .js,.jsx,.ts,.tsx --fix",
      "prettier --write"
    ],
    "**/*.{md,yml,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "lunde"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "peerDependencies": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "test",
    "*.config.js",
    "*.d.ts"
  ],
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.{ts,tsx}"
    ],
    "globals": {
      "__DEV__": true
    },
    "moduleDirectories": [
      "node_modules",
      "src",
      "server/src",
      "test"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "snapshotResolver": "./test/resolve-snapshot.js",
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/{server/src,src}/**/?(*.)test.{tsx,ts}"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc-node/jest",
        {
          "react": {
            "runtime": "automatic",
            "development": false,
            "useBuiltins": true
          }
        }
      ]
    }
  },
  "dependencies": {
    "@react-hook/passive-layout-effect": "^1.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@dash-ui/styles": "^0.8.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@swc-node/core": "^1.6.0",
    "@swc-node/jest": "^1.3.2",
    "@testing-library/jest-dom": "latest",
    "@testing-library/react": "latest",
    "@testing-library/react-hooks": "latest",
    "@testing-library/user-event": "latest",
    "@types/jest": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "babel-jest": "latest",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "latest",
    "eslint-config-lunde": "^0.5.0",
    "husky": "^7.0.2",
    "jest": "latest",
    "lint-staged": "latest",
    "lundle": "^0.4.9",
    "prettier": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-test-renderer": "latest",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "@dash-ui/styles": ">=0.6.1",
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "release": {
    "branches": [
      "main",
      "next",
      "alpha"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "types",
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
