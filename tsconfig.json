{
  "include": ["src", "server/src"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "server/src/**/*.test.ts",
    "server/src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@dash-ui/react": ["./src"],
      "@dash-ui/react/server": ["./server"]
    }
  }
}
